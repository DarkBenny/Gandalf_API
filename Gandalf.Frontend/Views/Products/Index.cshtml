@model IEnumerable<Gandalf.Frontend.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>


    <h1>All Products </h1>

    <p></p>
    <hr />

    <!--

    name, imagelink, categoryname

    for each: <a asp-action="Details" asp-route-id="item.Id">Details</a>

    -->
    <div class="container">
        <div class="row">

            @foreach (var item in Model)
            {

                <div class="card mb-3 mx-2 col-md-3 col-sm-4" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="@item.ImageLink" class="img-fluid rounded-start" alt="Image not found">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">@item.CategoryName</p>
                                <p class="card-text"><small class="text-body-secondary"></small></p>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>

    </div>


</body>
</html>



