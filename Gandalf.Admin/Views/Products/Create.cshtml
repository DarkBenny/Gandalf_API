@model Gandalf.Admin.Models.Product

@{
    ViewData["Title"] = "Create";
}


<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Category</label>
                <div></div>
                <select id="catSelect" asp-for="CategoryId" class="control-label" onselect="SetCategoryName();">
                    <option value="" disabled selected>Select your option</option>
                    @foreach (var category in ViewBag.CategoriesList)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="ImageLink" class="control-label">Image url</label>
                <input asp-for="ImageLink" class="form-control" />
                <span asp-validation-for="ImageLink" class="text-danger"></span>
            </div>
            <div><p></p></div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <p></p>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
